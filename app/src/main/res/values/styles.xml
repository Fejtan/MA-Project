<resources xmlns:tools="http://schemas.android.com/tools">
	
	<style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/grey300</item>
	</style>
	
	<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	
	<style name="AccentblackTheme" parent="AppTheme">
		<item name="colorAccent">@color/black</item>
	</style>
	
	<!-- TextView -->
	<style name="UserToolbarText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">@dimen/font_20</item>
		<item name="android:textColor">@color/primaryTextColor</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<style name="UserDialogText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">@dimen/font_15</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_marginStart">@dimen/spacing_16</item>
		<item name="android:layout_marginEnd">@dimen/spacing_16</item>
	</style>
	
	<style name="UserGameDialogInfo">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/primaryTextColor</item>
		<item name="android:textSize">@dimen/font_18</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">@dimen/spacing_8</item>
	</style>
	
	<!-- EditText -->
	<style name="EtDefault">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
		<item name="android:background">@drawable/shape_bg_default_edittext</item>
		<item name="android:padding">@dimen/spacing_8</item>
	</style>
	
	<style name="EtNickname" parent="EtDefault">
		<item tools:targetApi="o" name="android:autofillHints">@string/nickHint</item>
		<item name="android:inputType">text</item>
		<item name="android:hint">@string/nickHint</item>
		<item name="android:digits">@string/stringContains</item>
	</style>
	
	<style name="EtPassword" parent="EtDefault">
		<item tools:targetApi="o" name="android:autofillHints">@string/passHint</item>
		<item name="android:inputType">textPassword</item>
		<item name="android:hint">@string/passHint</item>
		<item name="android:digits">@string/stringContainsSpecials</item>
	</style>
	
	<!-- Button -->
	<style name="BtnDefault">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:background">@drawable/selector_bg_default_button</item>
		<item name="android:textColor">@color/primaryTextColor</item>
		<item name="android:textSize">@dimen/font_15</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- ImageView -->
	<style name="ImgToolbarIcon">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:adjustViewBounds">true</item>
		<item name="android:padding">@dimen/spacing_16</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>
	
	<style name="ImgAvatar">
		<item name="android:src">@color/white</item>
		<item name="riv_oval">true</item>
		<item name="riv_border_width">@dimen/avatar_stroke</item>
		<item name="riv_border_color">@color/black</item>
	</style>
	
	<!-- Layout Styles -->
	<style name="LytRelativeDialogRoot">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
	
	<style name="LytDialogRoot">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minWidth">@dimen/dialog_min_width</item>
		<item name="android:background">@drawable/shape_bg_dialog</item>
	</style>
	
	<!-- Progressbar Styles-->
	<style name="ProgressBarStyle" parent="Base.Widget.AppCompat.ProgressBar">
		<item name="android:layout_width">@dimen/progressbar_size</item>
		<item name="android:layout_height">@dimen/progressbar_size</item>
		<item name="android:theme">@style/AccentblackTheme</item>
	</style>
	
	<!-- Toolbar -->
	<style name="Toolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:background">@color/colorPrimary</item>
		<item tools:targetApi="lollipop" name="android:elevation">5dp</item>
		<item name="contentInsetStart">0dp</item>
	</style>
	
	<!-- TextAppearance-->
	<style name="LeaderOrderTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/font_18</item>
		<item name="android:textColor">@color/grey500</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="LeaderNicknameTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/font_16</item>
		<item name="android:textColor">@color/grey900</item>
	</style>
	
	<style name="LeaderScoreTextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/font_16</item>
		<item name="android:textColor">@color/grey700</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>
