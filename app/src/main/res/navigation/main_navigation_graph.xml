<?xml version="1.0" encoding="utf-8"?>
<navigation
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:startDestination="@id/homeFragment">
	
	<fragment
		android:id="@+id/homeFragment"
		android:name="com.project.cardgame.ui.main.fragments.HomeFragment"
		android:label="HomeFragment">
		<action
			android:id="@+id/action_homeFragment_to_gameFragment"
			app:destination="@id/gameFragment" />
		<action
			android:id="@+id/action_homeFragment_to_leadersFragment"
			app:destination="@id/leadersFragment" />
	</fragment>
	<fragment
		android:id="@+id/gameFragment"
		android:name="com.project.cardgame.ui.main.fragments.GameFragment"
		android:label="GameFragment" />
	<fragment
		android:id="@+id/leadersFragment"
		android:name="com.project.cardgame.ui.main.fragments.LeadersFragment"
		android:label="LeadersFragment" />
</navigation>